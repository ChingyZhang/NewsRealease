@{
    ViewBag.Title = "ModifyUserView";
    Layout = null;//"~/Views/Shared/_Layout.cshtml";

    NewsRealease.DAL.DB.Users user = new NewsRealease.DAL.DB.Users();
    if (ViewData["user"] != null)
    {
        user = ViewData["user"] as NewsRealease.DAL.DB.Users;
    }
}

@using (Ajax.BeginForm("ChgUser", "User", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "chgSucc(data)" }, new { id = "formChg" }))
{                       
    <!--right start-->
@*<div class="col-md-9">*@
    <div class="divhrwhite"></div>        

    <div class="jumbotron bg-white">

        <div class="jumbotron bg-white">

            <div class="input-group">
                <span class="input-group-addon">用户编号：</span>
                <input name="user_id" class="form-control" type="text" value="@user.user_id" readonly="readonly"/>
            </div>
            <div class="divhrwhite"></div>

            <div class="input-group">
                <span class="input-group-addon">登录名：</span>
                <input name="user_loginName" class="form-control" type="text" value="@user.user_loginName"/>
            </div>
            <div class="divhrwhite"></div>

            <div class="input-group">
                <span class="input-group-addon">真实姓名：</span>
                <input name="user_realName" class="form-control" type="text"value="@user.user_realName"/>
            </div>
            <div class="divhrwhite"></div>

            <input type="submit" class="btn btn-primary" value="提交" />
        </div>

        
    </div>
   
    <!--right end-->
}


<script type="text/javascript">
    function chgSucc(data) {
        alert("修改成功");
        $("#temp").html();
    }

</script>
